    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
        android:weightSum="8"
            android:background="#44fcff"
            android:padding="5dp"
        android:layout_weight="0.7"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/clearIV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@string/clear"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/clear" />

        <ImageView
            android:id="@+id/eraseIV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@string/erase"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/erase" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/blackIV"
                android:layout_weight="1"
                app:srcCompat="@drawable/black"
                android:contentDescription="@string/black_button"
                android:layout_gravity="center"
                android:paddingEnd="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingStart="2dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/redIV"
                android:layout_weight="1"
                app:srcCompat="@drawable/red"
                android:contentDescription="@string/red_button"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_gravity="center"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/blueIV"
                android:layout_weight="1"
                app:srcCompat="@drawable/blue"
                android:contentDescription="@string/blue_button"
                android:paddingRight="2dp"
                android:layout_gravity="center"
                android:paddingEnd="2dp"
                android:paddingLeft="2dp"
                android:paddingStart="2dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/greenIV"
                android:layout_weight="1"
                app:srcCompat="@drawable/green"
                android:contentDescription="@string/green_button"
                android:paddingRight="2dp"
                android:layout_gravity="center"
                android:paddingEnd="2dp"
                android:paddingLeft="2dp"
                android:paddingStart="2dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/orangeIV"
                android:layout_weight="1"
                app:srcCompat="@drawable/orange"
                android:contentDescription="@string/orange_button"
                android:paddingRight="2dp"
                android:layout_gravity="center"
                android:paddingEnd="2dp"
                android:paddingLeft="2dp"
                android:paddingStart="2dp" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/purpleIV"
                android:layout_weight="1"
                app:srcCompat="@drawable/purple"
                android:contentDescription="@string/purple_button"
                android:layout_gravity="center"
                android:paddingEnd="2dp"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:paddingStart="2dp" />
        </LinearLayout>


</LinearLayout>
