<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mydrawings.MainActivity"
    android:orientation="vertical"
    android:weightSum="6">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:weightSum="3"
        android:background="#44fcff">

        <ImageView
            android:id="@+id/plusIV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@string/increases_the_thickness_of_the_line"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/plus" />

        <ImageView
            android:id="@+id/minusIV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@string/reduces_the_thickness_of_the_line"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/minus" />

        <ImageView
            android:id="@+id/questionIV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@string/help"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/question" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/myRL"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.8">

        <view
            android:id="@+id/view"
            class="com.mydrawings.MyPathDrawColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white" />
    </RelativeLayout>

